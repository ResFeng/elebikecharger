<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.chenlin.dp.modules.sc.dao.ScProviderbalanceMapper">
	
	<select id="listForPage" resultType="net.chenlin.dp.modules.sc.entity.ScProviderbalanceEntity">
		SELECT
			`BalanceId`, 
			`ProviderId`, 
			`BalanceDate`, 
			`Operator`, 
			`Amount`, 
			`PaymentType`, 
			`OpenId`, 
			`AccountName`, 
			`PaymentAmount`, 
			`PaymentRatio`, 
			`PaymentStatus`, 
			`PaymentId`, 
			`PaymentDate`, 
			`Remark`
		FROM
			sc_providerbalance
		ORDER BY
			BalanceId DESC
	</select>
	
	<insert id="save">
		INSERT INTO sc_providerbalance (
			`BalanceId`, 
			`ProviderId`, 
			`BalanceDate`, 
			`Operator`, 
			`Amount`, 
			`PaymentType`, 
			`OpenId`, 
			`AccountName`, 
			`PaymentAmount`, 
			`PaymentRatio`, 
			`PaymentStatus`, 
			`PaymentId`, 
			`PaymentDate`, 
			`Remark`
		)
		VALUES (
			#{balanceid}, 
			#{providerid}, 
			#{balancedate}, 
			#{operator}, 
			#{amount}, 
			#{paymenttype}, 
			#{openid}, 
			#{accountname}, 
			#{paymentamount}, 
			#{paymentratio}, 
			#{paymentstatus}, 
			#{paymentid}, 
			#{paymentdate}, 
			#{remark}
		)
	</insert>
	
	<select id="getObjectById" resultType="net.chenlin.dp.modules.sc.entity.ScProviderbalanceEntity">
		SELECT
			`BalanceId`, 
			`ProviderId`, 
			`BalanceDate`, 
			`Operator`, 
			`Amount`, 
			`PaymentType`, 
			`OpenId`, 
			`AccountName`, 
			`PaymentAmount`, 
			`PaymentRatio`, 
			`PaymentStatus`, 
			`PaymentId`, 
			`PaymentDate`, 
			`Remark`
		FROM
			sc_providerbalance
		WHERE
			BalanceId = #{balanceid}
	</select>
	
	<update id="update">
		UPDATE sc_providerbalance
	 	<set>
			<if test="providerid != null">`ProviderId` = #{providerid}, </if>
			<if test="balancedate != null">`BalanceDate` = #{balancedate}, </if>
			<if test="operator != null">`Operator` = #{operator}, </if>
			<if test="amount != null">`Amount` = #{amount}, </if>
			<if test="paymenttype != null">`PaymentType` = #{paymenttype}, </if>
			<if test="openid != null">`OpenId` = #{openid}, </if>
			<if test="accountname != null">`AccountName` = #{accountname}, </if>
			<if test="paymentamount != null">`PaymentAmount` = #{paymentamount}, </if>
			<if test="paymentratio != null">`PaymentRatio` = #{paymentratio}, </if>
			<if test="paymentstatus != null">`PaymentStatus` = #{paymentstatus}, </if>
			<if test="paymentid != null">`PaymentId` = #{paymentid}, </if>
			<if test="paymentdate != null">`PaymentDate` = #{paymentdate}, </if>
			<if test="remark != null">`Remark` = #{remark}</if>
		</set>
		WHERE
			BalanceId = #{balanceid}
	</update>
	
	<delete id="batchRemove">
		DELETE
		FROM
			sc_providerbalance
		WHERE
			BalanceId IN
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>